<UserControl
    x:Class="AIDevGallery.Controls.Evaluate.EvaluationEmptyState"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Evaluate/EvaluationCardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Animated Gradient Background -->
            <Storyboard x:Key="GradientAnimation" RepeatBehavior="Forever">
                <ColorAnimationUsingKeyFrames Storyboard.TargetName="GradientStop1" 
                                             Storyboard.TargetProperty="Color"
                                             Duration="0:0:6">
                    <LinearColorKeyFrame Value="#E3F2FD" KeyTime="0:0:0"/>
                    <LinearColorKeyFrame Value="#E8F5E9" KeyTime="0:0:3"/>
                    <LinearColorKeyFrame Value="#E3F2FD" KeyTime="0:0:6"/>
                </ColorAnimationUsingKeyFrames>
                <ColorAnimationUsingKeyFrames Storyboard.TargetName="GradientStop2" 
                                             Storyboard.TargetProperty="Color"
                                             Duration="0:0:6">
                    <LinearColorKeyFrame Value="#C5CAE9" KeyTime="0:0:0"/>
                    <LinearColorKeyFrame Value="#C8E6C9" KeyTime="0:0:3"/>
                    <LinearColorKeyFrame Value="#C5CAE9" KeyTime="0:0:6"/>
                </ColorAnimationUsingKeyFrames>
            </Storyboard>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <!-- Animated Background -->
        <Border CornerRadius="16" Opacity="0.15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop x:Name="GradientStop1" Color="#E3F2FD" Offset="0"/>
                    <GradientStop x:Name="GradientStop2" Color="#C5CAE9" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Content -->
        <StackPanel VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   MaxWidth="600"
                   Padding="48"
                   Spacing="24">
            
            <!-- Icon -->
            <Grid HorizontalAlignment="Center" 
                 Width="120" 
                 Height="120">
                <!-- Background Circle -->
                <Ellipse Fill="{ThemeResource AccentFillColorDefaultBrush}" 
                        Opacity="0.1"/>
                
                <!-- Icon -->
                <FontIcon Glyph="&#xE9F5;" 
                         FontSize="48" 
                         Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
            </Grid>
            
            <!-- Title -->
            <TextBlock Text="Welcome to AI Evaluations" 
                      Style="{ThemeResource TitleTextBlockStyle}"
                      HorizontalAlignment="Center"/>
            
            <!-- Description -->
            <TextBlock Text="Import your evaluation results to visualize performance metrics and gain insights into your AI models"
                      Style="{ThemeResource BodyTextBlockStyle}"
                      TextAlignment="Center"
                      TextWrapping="Wrap"
                      Opacity="0.8"
                      MaxWidth="400"/>
            
            <!-- Action Cards -->
            <Grid ColumnSpacing="16" 
                 RowSpacing="16"
                 Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <!-- Import Results Card -->
                <Button Grid.Column="0" 
                       Style="{StaticResource OnboardingCardStyle}"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Click="OnImportResultsClick">
                    <Grid Padding="20" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0"
                               Background="#E8F5E9"
                               Width="48"
                               Height="48"
                               CornerRadius="8"
                               HorizontalAlignment="Left">
                            <FontIcon Glyph="&#xE8B5;" 
                                     FontSize="24" 
                                     Foreground="#4CAF50"/>
                        </Border>
                        
                        <TextBlock Grid.Row="1"
                                  Text="Import Results" 
                                  Style="{ThemeResource BaseTextBlockStyle}"
                                  FontWeight="SemiBold"/>
                        
                        <TextBlock Grid.Row="2"
                                  Text="Visualize existing evaluation data from JSONL files" 
                                  Style="{ThemeResource CaptionTextBlockStyle}"
                                  TextWrapping="Wrap"
                                  Opacity="0.7"/>
                    </Grid>
                </Button>
                
                <!-- Test Model Card -->
                <Button Grid.Column="1" 
                       Style="{StaticResource OnboardingCardStyle}"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Click="OnTestModelClick">
                    <Grid Padding="20" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0"
                               Background="#E3F2FD"
                               Width="48"
                               Height="48"
                               CornerRadius="8"
                               HorizontalAlignment="Left">
                            <FontIcon Glyph="&#xE915;" 
                                     FontSize="24" 
                                     Foreground="#2196F3"/>
                        </Border>
                        
                        <TextBlock Grid.Row="1"
                                  Text="Test Model" 
                                  Style="{ThemeResource BaseTextBlockStyle}"
                                  FontWeight="SemiBold"/>
                        
                        <TextBlock Grid.Row="2"
                                  Text="Evaluate a new AI model with your dataset" 
                                  Style="{ThemeResource CaptionTextBlockStyle}"
                                  TextWrapping="Wrap"
                                  Opacity="0.7"/>
                    </Grid>
                </Button>
                
                <!-- Learn More Card -->
                <Button Grid.Column="2" 
                       Style="{StaticResource OnboardingCardStyle}"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Click="OnLearnMoreClick">
                    <Grid Padding="20" RowSpacing="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0"
                               Background="#FFF3E0"
                               Width="48"
                               Height="48"
                               CornerRadius="8"
                               HorizontalAlignment="Left">
                            <FontIcon Glyph="&#xE11B;" 
                                     FontSize="24" 
                                     Foreground="#FF9800"/>
                        </Border>
                        
                        <TextBlock Grid.Row="1"
                                  Text="Learn More" 
                                  Style="{ThemeResource BaseTextBlockStyle}"
                                  FontWeight="SemiBold"/>
                        
                        <TextBlock Grid.Row="2"
                                  Text="View example evaluations and best practices" 
                                  Style="{ThemeResource CaptionTextBlockStyle}"
                                  TextWrapping="Wrap"
                                  Opacity="0.7"/>
                    </Grid>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>