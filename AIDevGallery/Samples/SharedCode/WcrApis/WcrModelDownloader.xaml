<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="AIDevGallery.Samples.SharedCode.WcrModelDownloader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AIDevGallery.Samples.SharedCode"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource SolidBackgroundFillColorBaseBrush}">
        <StackPanel x:Name="NotDownloadedContent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="24">
            <TextBlock
                Margin="24"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                MaxWidth="450"
                TextWrapping="WrapWholeWords"
                TextAlignment="Center">
                This Windows Copilot Runtime API requires a model download. Click "Make Available" to request the model download via Windows Update.
            </TextBlock>
            <Button HorizontalAlignment="Center" Click="DownloadModelClicked">Make Available</Button>
        </StackPanel>
        <StackPanel
            x:Name="loadingRingContainer"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical"
            Visibility="Collapsed">
            <ProgressRing
                Width="64"
                Height="64"
                IsIndeterminate="False"
                Value="{x:Bind DownloadProgress, Mode=OneWay}"
                />
            <TextBlock
                Margin="24"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                TextAlignment="Center">
                <Run Text="Requesting model.." /> <LineBreak />
                <LineBreak />
                <Run FontSize="12" Text="Download progress can also be tracked in " /><Hyperlink Click="WindowsUpdateHyperlinkClicked" FontSize="12">Windows Update</Hyperlink>
            </TextBlock>
        </StackPanel>
        <StackPanel x:Name="errorContent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
            <TextBlock
                Margin="24"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                MaxWidth="500"
                TextWrapping="WrapWholeWords"
                TextAlignment="Center">
                <Run Text="Error downloading model: " /> 
                <LineBreak />
                <LineBreak />
                <Run Text="{x:Bind ErrorMessage, Mode=OneWay}" />
                <LineBreak />
                <LineBreak />
                <Run Text="Note: This Windows Copilot Runtime API requires a Copilot+ PC and a Windows 11 Insider Preview Build 26120.3073 (Dev and Beta Channels)." />
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
