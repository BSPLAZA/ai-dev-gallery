<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="AIDevGallery.Samples.SharedCode.WcrModelDownloader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="DownloadStates">
                <VisualState x:Name="NotDownloaded" />
                <VisualState x:Name="Downloading">
                    <VisualState.Setters>
                        <Setter Target="NotDownloadedContent.Visibility" Value="Collapsed" />
                        <Setter Target="loadingRingContainer.Visibility" Value="Visible" />
                        <Setter Target="errorContent.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Downloaded">
                    <VisualState.Setters>
                        <Setter Target="NotDownloadedContent.Visibility" Value="Collapsed" />
                        <Setter Target="loadingRingContainer.Visibility" Value="Collapsed" />
                        <Setter Target="errorContent.Visibility" Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Error">
                    <VisualState.Setters>
                        <Setter Target="NotDownloadedContent.Visibility" Value="Collapsed" />
                        <Setter Target="loadingRingContainer.Visibility" Value="Collapsed" />
                        <Setter Target="errorContent.Visibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <StackPanel
            x:Name="NotDownloadedContent"
            Margin="48,-4,48,48"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical"
            Spacing="8"
            Visibility="Collapsed">
            <Image Width="36" Source="ms-appx:///Assets/ModelIcons/WCRAPI.svg" />
            <TextBlock
                FontWeight="SemiBold"
                Text="Model download required"
                TextAlignment="Center" />
            <TextBlock
                FontSize="12"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                IsTextSelectionEnabled="True"
                TextAlignment="Center"
                TextWrapping="Wrap">
                <Run Text="This Windows Copilot Runtime API requires an one-time model download via Windows Update." />
            </TextBlock>
            <Button
                Margin="0,16,0,0"
                HorizontalAlignment="Center"
                Click="DownloadModelClicked"
                Content="Request model"
                Style="{StaticResource AccentButtonStyle}" />
        </StackPanel>
        <StackPanel
            x:Name="loadingRingContainer"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical"
            Visibility="Collapsed">
            <ProgressRing
                Width="64"
                Height="64"
                IsIndeterminate="True"
                Value="{x:Bind DownloadProgress, Mode=OneWay}" />
            <TextBlock
                Margin="24"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                TextAlignment="Center"
                TextWrapping="WrapWholeWords">
                <Run Text="Requesting model.." /> <LineBreak />
                <LineBreak />
                <Run FontSize="12" Text="Download progress can also be tracked in " /><Hyperlink Click="WindowsUpdateHyperlinkClicked" FontSize="12">Windows Update</Hyperlink><LineBreak />
            </TextBlock>
        </StackPanel>

        <StackPanel
            x:Name="errorContent"
            Margin="48,-4,48,48"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical"
            Spacing="8"
            Visibility="Collapsed">
            <FontIcon FontSize="36" Glyph="&#xE783;" />
            <TextBlock
                FontWeight="SemiBold"
                Text="Model download error"
                TextAlignment="Center" />
            <TextBlock
                FontSize="12"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                IsTextSelectionEnabled="True"
                Text="{x:Bind ToFirstLine(ErrorMessage), Mode=OneWay}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </StackPanel>

        <InfoBar
            Title="Experimental Windows Copilot Runtime APIs"
            HorizontalAlignment="Stretch"
            IsOpen="True"
            Message="These APIs are in preview and require a Copilot+ PC with Windows 11 Insider Preview Build 26120.3073 or higher (Dev and Beta channels)."
            Severity="Warning">
            <InfoBar.ActionButton>
                <HyperlinkButton Content="Learn more about Windows Copilot Runtime API requirements" NavigateUri="https://learn.microsoft.com/windows/ai/apis" />
            </InfoBar.ActionButton>
        </InfoBar>
    </Grid>
</UserControl>
