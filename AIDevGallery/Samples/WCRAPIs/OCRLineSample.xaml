<?xml version="1.0" encoding="utf-8" ?>
<samples:BaseSamplePage
    x:Class="AIDevGallery.Samples.WCRAPIs.OCRLineSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:samples="using:AIDevGallery.Samples"
    xmlns:shared="using:AIDevGallery.Samples.SharedCode"
    mc:Ignorable="d">

    <Grid RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12" Grid.Row="1" VerticalAlignment="Top">
            <DropDownButton AutomationProperties.Name="Select image">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon FontSize="16" Glyph="&#xEE71;" />
                    <TextBlock Text="Select image" />
                </StackPanel>
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Click="PasteImage_Click" Text="From clipboard" />
                        <MenuFlyoutItem Click="LoadImage_Click" Text="From file" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            <Button
                x:Name="CopyTextButton"
                Click="CopyText_Click"
                Content="Copy all text"
                ToolTipService.ToolTip="Click on the text to copy that line to your clipboard"
                Visibility="Collapsed" />
        </StackPanel>

        <Viewbox
            x:Name="ImageViewbox"
            MaxHeight="600">
            <Grid
                x:Name="PaneGrid"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Image x:Name="ImageSrc" Stretch="Uniform" />
                <Canvas x:Name="RectCanvas" Visibility="Collapsed">
                    <Canvas.Background>
                        <SolidColorBrush Color="Black" Opacity="0.6"/>
                    </Canvas.Background>
                </Canvas>
                <ToggleButton x:Name="ViewToggle" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="12" Visibility="Collapsed" Content="Toggle OCR View" IsChecked="True" Click="ToggleButton_Click"/>
            </Grid>
        </Viewbox>
        
        <shared:WcrModelDownloader 
            x:Name="WcrModelDownloader" 
            DownloadClicked="WcrModelDownloader_DownloadClicked"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"/>
    </Grid>
</samples:BaseSamplePage>
