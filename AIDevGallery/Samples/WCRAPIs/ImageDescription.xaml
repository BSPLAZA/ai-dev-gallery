<?xml version="1.0" encoding="utf-8" ?>
<samples:BaseSamplePage
    x:Class="AIDevGallery.Samples.WCRAPIs.ImageDescription"
    xmlns:samples="using:AIDevGallery.Samples"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AIDevGallery.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls" mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Click="LoadImage_Click" Margin="10"
                    Style="{StaticResource AccentButtonStyle}">Load Image</Button>
            <Button Click="PasteImage_Click" Margin="10"
                    Style="{StaticResource AccentButtonStyle}">Paste Image</Button>
            <ProgressRing x:Name="LoadImageProgressRing" Width="24" Height="24" Margin="10"
                    IsActive="True" HorizontalAlignment="Center" Visibility="Collapsed" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image x:Name="ImageSrc" Grid.Row="0" Grid.Column="0"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    Stretch="Uniform" />
            <TextBlock x:Name="ResponseTxt" Grid.Row="1" TextWrapping="Wrap" Margin="10" />
        </Grid>
    </Grid>
</samples:BaseSamplePage>
