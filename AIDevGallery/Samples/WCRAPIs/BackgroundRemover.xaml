<?xml version="1.0" encoding="utf-8" ?>
<samples:BaseSamplePage
    x:Class="AIDevGallery.Samples.WCRAPIs.BackgroundRemover"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:samples="using:AIDevGallery.Samples"
    xmlns:shared="using:AIDevGallery.Samples.SharedCode"
    mc:Ignorable="d">
    <Grid RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Viewbox 
            x:Name="ImageViewbox" 
            Grid.Row="0"
            Stretch="Uniform"
            MaxWidth="600"
            MaxHeight="400">
            <Border 
                BorderThickness="3" 
                BorderBrush="{ThemeResource AccentAAFillColorDefaultBrush}"
                CornerRadius="3">
                <Grid>
                    <Image 
                        x:Name="CanvasImage"
                        PointerPressed="CanvasImage_PointerPressed"/>
                    <Canvas 
                        x:Name="PointsCanvas" 
                        IsHitTestVisible="False"/>
                </Grid>
            </Border>
        </Viewbox>
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Spacing="8"
            Grid.Row="1">
            <Button
                x:Name="RevertButton"
                Content="Revert"
                Style="{ThemeResource AccentButtonStyle}"
                Click="RevertButton_Click"
                Visibility="Collapsed"/>
            <Button 
                x:Name="RemoveBackgroundButton"
                Content="Remove Background"
                Style="{ThemeResource AccentButtonStyle}"
                Click="RemoveBackground_Click"/>
            <Button
                x:Name="ClearSelectionButton"
                Content="Clear Selected Points"
                Click="CleanSelection_Click"/>
            <DropDownButton AutomationProperties.Name="Select image">
                <TextBlock Text="Select Image" />
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Click="PasteImage_Click" Text="From Clipboard" />
                        <MenuFlyoutItem Click="LoadImage_Click" Text="From File" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
        </StackPanel>
        <TextBlock 
            x:Name="InstructionText"
            Grid.Row="2"
            TextWrapping="WrapWholeWords"
            FontSize="10"
            HorizontalAlignment="Center"
            Text="Click on the image to select objects you wish to be included after background removal. 0 of 31 maximum points currently selected."/>
        <shared:WcrModelDownloader 
            x:Name="WcrModelDownloader" 
            DownloadClicked="WcrModelDownloader_DownloadClicked"
            Grid.RowSpan="2"/>
    </Grid>
</samples:BaseSamplePage>
