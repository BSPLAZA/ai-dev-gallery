<?xml version="1.0" encoding="utf-8" ?>
<samples:BaseSamplePage x:Class="AIDevGallery.Samples.WCRAPIs.PhiSilicaLoRa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:samples="using:AIDevGallery.Samples" mc:Ignorable="d">
    <Grid x:Name="MainGrid" ColumnSpacing="8" MinHeight="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch"
                ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Adapter" Margin="10" Width="50" VerticalAlignment="Center"
                    Grid.Column="0" />
            <HyperlinkButton x:Name="AdapterHyperLink" Grid.Column="1" Margin="0,10"
                    Click="AdapterHyperLink_Click" />
            <Button Content="Select file" Click="SelectFile_Click" Width="150"
                    Grid.Column="2" />
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="2" ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Prompt" Margin="10" Width="50" VerticalAlignment="Center"
                    Grid.Column="0" />
            <TextBox x:Name="InputTextBox" Grid.Column="1" Margin="0,10" />
            <SplitButton x:Name="GenerateButton" Content="Generate" Click="Generate_Click"
                    Width="150" Grid.Column="2">
                <SplitButton.Flyout>
                    <MenuFlyout x:Name="GenerateFlyout">
                        <ToggleMenuFlyoutItem Text="Generate All" IsChecked="True"
                                Click="GenerateType_Click" Tag="All" />
                        <ToggleMenuFlyoutItem Text="Generate With Adapter"
                                Click="GenerateType_Click" Tag="With" />
                        <ToggleMenuFlyoutItem Text="Generate Without Adapter"
                                Click="GenerateType_Click" Tag="Without" />
                    </MenuFlyout>
                </SplitButton.Flyout>
            </SplitButton>
            <Button x:Name="StopBtn" Width="150" AutomationProperties.Name="Stop"
                    Click="StopBtn_Click" Style="{ThemeResource AccentButtonStyle}"
                    Grid.Column="2" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon x:Name="StopIcon" FontSize="16" Glyph="&#xE73B;" />
                    <ProgressRing x:Name="OutputProgressBar" Width="16" Height="16"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                            IsIndeterminate="True" Visibility="Collapsed" />
                    <TextBlock Text="Stop" />
                </StackPanel>
            </Button>
        </Grid>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="With Adapter" Margin="10"
                FontWeight="Bold" />
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Without Adapter" Margin="10"
                FontWeight="Bold" />
        <ScrollViewer x:Name="LoraScroll" Grid.Row="3" Grid.Column="0"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <TextBlock x:Name="LoraTxt" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" TextWrapping="Wrap" />
        </ScrollViewer>
        <ScrollViewer x:Name="NoLoraScroll" Grid.Row="3" Grid.Column="1"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
            <TextBlock x:Name="NoLoraTxt" HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" TextWrapping="Wrap" />
        </ScrollViewer>
    </Grid>
</samples:BaseSamplePage>
