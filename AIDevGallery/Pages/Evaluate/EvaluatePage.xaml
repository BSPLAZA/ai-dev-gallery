<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AIDevGallery.Pages.EvaluatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AIDevGallery.Controls"
    xmlns:evalcontrols="using:AIDevGallery.Controls.Evaluate"
    xmlns:converters="using:AIDevGallery.Converters"
    xmlns:local="using:AIDevGallery.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid x:Name="RootGrid" MaxWidth="1200" Padding="24,16,24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock
                    Text="AI Evaluations"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Margin="0,0,0,4" />
                <TextBlock
                    Style="{StaticResource BodyTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Test, compare, and analyze AI model performance to make data-driven decisions" />
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       VerticalAlignment="Bottom"
                       Spacing="8">
                <Button x:Name="NewEvaluationButton" 
                       Content="New Evaluation" 
                       Style="{StaticResource AccentButtonStyle}" 
                       Click="NewEvaluationButton_Click">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="N"/>
                    </Button.KeyboardAccelerators>
                </Button>
                <Button x:Name="RefreshButton" 
                       Click="RefreshButton_Click"
                       ToolTipService.ToolTip="Refresh list">
                    <FontIcon Glyph="&#xE117;" FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Search and Filter Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBox"
                    Grid.Column="0"
                    PlaceholderText="Search evaluations..."
                    Width="320"
                    VerticalAlignment="Center"
                    TextChanged="SearchBox_TextChanged">
                <TextBox.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="F"/>
                </TextBox.KeyboardAccelerators>
            </TextBox>

            <!-- Filter dropdown placeholder -->
            <ComboBox x:Name="FilterComboBox"
                     Grid.Column="2"
                     PlaceholderText="All evaluations"
                     Width="200"
                     VerticalAlignment="Center"
                     Visibility="Collapsed"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <!-- Loading State -->
            <ProgressRing x:Name="LoadingRing"
                         IsActive="False"
                         Width="60"
                         Height="60"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Visibility="Collapsed"/>

            <!-- Empty State -->
            <StackPanel x:Name="EmptyState"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Spacing="16">
                <TextBlock Text="No evaluations yet" 
                          Style="{StaticResource SubtitleTextBlockStyle}"
                          HorizontalAlignment="Center"/>
                
                <TextBlock Text="Import existing results or start a new evaluation"
                          Style="{StaticResource BodyTextBlockStyle}"
                          Opacity="0.6"
                          HorizontalAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                    <Button Click="ImportResults_Click">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ“¥" FontFamily="Segoe UI Emoji" FontSize="16"/>
                            <TextBlock Text="Import Results"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Click="NewEvaluation_Click" Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ§ª" FontFamily="Segoe UI Emoji" FontSize="16"/>
                            <TextBlock Text="New Evaluation"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <!-- Evaluations List Container -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- List Header with Select All -->
                <Border Grid.Row="0" 
                        Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                        Padding="16,8"
                        Visibility="{x:Bind GetListHeaderVisibility(FilteredEvaluations.Count), Mode=OneWay}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox x:Name="SelectAllCheckBox"
                                  Grid.Column="0"
                                  Click="SelectAllCheckBox_Click"
                                  VerticalAlignment="Center"/>
                        
                        <TextBlock Grid.Column="1"
                                   Text="Select All"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </Grid>
                </Border>
                
                <!-- Evaluations List -->
                <ListView x:Name="EvaluationsList"
                         Grid.Row="1"
                         Padding="0"
                         ItemsSource="{x:Bind FilteredEvaluations}"
                         SelectionMode="None"
                         IsItemClickEnabled="True"
                         ItemClick="EvaluationsList_ItemClick"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <evalcontrols:EvaluationListRow 
                                ViewModel="{Binding}"
                                ItemClicked="EvaluationRow_ItemClicked"
                                ItemDoubleClicked="EvaluationRow_ItemDoubleClicked"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            
            <!-- Floating Action Bar -->
            <evalcontrols:SelectionActionBar x:Name="SelectionActionBar"
                                              SelectedCount="{x:Bind SelectedCount, Mode=OneWay}"
                                              CompareClicked="ActionBar_CompareClicked"
                                              DeleteClicked="ActionBar_DeleteClicked"
                                              CancelClicked="ActionBar_CancelClicked"
                                              Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Page>