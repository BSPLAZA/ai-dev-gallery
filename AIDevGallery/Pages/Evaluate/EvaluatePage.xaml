<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AIDevGallery.Pages.EvaluatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AIDevGallery.Controls"
    xmlns:evalcontrols="using:AIDevGallery.Controls.Evaluate"
    xmlns:converters="using:AIDevGallery.Converters"
    xmlns:local="using:AIDevGallery.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid x:Name="RootGrid" MaxWidth="1200" Padding="24,16,24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock
                    Text="Evaluate"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Margin="0,0,0,4"
                    AutomationProperties.HeadingLevel="Level1" />
                <TextBlock
                    Style="{StaticResource BodyTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Test, compare, and analyze AI model performance to make data-driven decisions" />
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       VerticalAlignment="Bottom"
                       Spacing="8">
                <Button x:Name="NewEvaluationButton" 
                       Content="New Evaluation" 
                       Style="{StaticResource AccentButtonStyle}" 
                       Click="NewEvaluationButton_Click">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="N"/>
                    </Button.KeyboardAccelerators>
                </Button>
                <Button x:Name="RefreshButton" 
                       Click="RefreshButton_Click"
                       ToolTipService.ToolTip="Refresh list"
                       AutomationProperties.Name="Refresh evaluation list">
                    <FontIcon Glyph="&#xE117;" FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Search and Filter Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBox"
                    Grid.Column="0"
                    PlaceholderText="Search evaluations..."
                    Width="320"
                    VerticalAlignment="Center"
                    TextChanged="SearchBox_TextChanged"
                    AutomationProperties.Name="Search evaluations"
                    AutomationProperties.HelpText="Filter evaluations by name, model, or dataset">
                <TextBox.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="F"/>
                </TextBox.KeyboardAccelerators>
            </TextBox>

            <!-- Filter dropdown placeholder -->
            <ComboBox x:Name="FilterComboBox"
                     Grid.Column="2"
                     PlaceholderText="All evaluations"
                     Width="200"
                     VerticalAlignment="Center"
                     Visibility="Collapsed"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <!-- Loading State -->
            <ProgressRing x:Name="LoadingRing"
                         IsActive="False"
                         Width="60"
                         Height="60"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Visibility="Collapsed"
                         AutomationProperties.Name="Loading evaluations"
                         AutomationProperties.LiveSetting="Assertive"/>

            <!-- Empty State -->
            <StackPanel x:Name="EmptyState"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Spacing="24"
                       MaxWidth="600">
                <TextBlock Text="Welcome to Evaluate" 
                          Style="{StaticResource TitleTextBlockStyle}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,8"/>
                
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}"
                          TextAlignment="Center"
                          TextWrapping="Wrap"
                          Opacity="0.9"
                          HorizontalAlignment="Center"
                          FontSize="18"
                          Margin="0,0,0,16">
                    <Run Text="Evaluate helps you test and compare AI model performance with your datasets."/>
                </TextBlock>
                
                <Grid HorizontalAlignment="Center" MaxWidth="500">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="✓" 
                              Style="{StaticResource BodyLargeTextBlockStyle}"
                              Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                              Margin="0,0,12,8"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                              Style="{StaticResource BodyLargeTextBlockStyle}"
                              TextWrapping="Wrap"
                              Margin="0,0,0,8">
                        <Run Text="Test models with custom prompts and datasets"/>
                    </TextBlock>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="✓" 
                              Style="{StaticResource BodyLargeTextBlockStyle}"
                              Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                              Margin="0,0,12,8"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" 
                              Style="{StaticResource BodyLargeTextBlockStyle}"
                              TextWrapping="Wrap"
                              Margin="0,0,0,8">
                        <Run Text="Compare results across different models"/>
                    </TextBlock>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="✓" 
                              Style="{StaticResource BodyLargeTextBlockStyle}"
                              Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                              Margin="0,0,12,8"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" 
                              Style="{StaticResource BodyLargeTextBlockStyle}"
                              TextWrapping="Wrap"
                              Margin="0,0,0,8">
                        <Run Text="Import existing evaluation results"/>
                    </TextBlock>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="✓" 
                              Style="{StaticResource BodyLargeTextBlockStyle}"
                              Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                              Margin="0,0,12,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" 
                              Style="{StaticResource BodyLargeTextBlockStyle}"
                              TextWrapping="Wrap">
                        <Run Text="Track performance metrics over time"/>
                    </TextBlock>
                </Grid>
                
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20,16"
                        HorizontalAlignment="Center"
                        Margin="0,24,0,0">
                    <TextBlock Style="{StaticResource BodyLargeTextBlockStyle}"
                              TextAlignment="Center"
                              HorizontalAlignment="Center">
                        <Run Text="Click"/>
                        <Run Text="New Evaluation" FontWeight="SemiBold" 
                             Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <Run Text="above to get started"/>
                    </TextBlock>
                </Border>
            </StackPanel>

            <!-- Evaluations List Container -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- List Header with Select All -->
                <Border Grid.Row="0" 
                        Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                        Padding="16,8"
                        Visibility="{x:Bind GetListHeaderVisibility(FilteredEvaluations.Count), Mode=OneWay}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox x:Name="SelectAllCheckBox"
                                  Grid.Column="0"
                                  Click="SelectAllCheckBox_Click"
                                  VerticalAlignment="Center"
                                  AutomationProperties.Name="Select all evaluations"/>
                        
                        <TextBlock Grid.Column="1"
                                   Text="Select All"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </Grid>
                </Border>
                
                <!-- Evaluations List -->
                <ListView x:Name="EvaluationsList"
                         Grid.Row="1"
                         Padding="0"
                         ItemsSource="{x:Bind FilteredEvaluations}"
                         SelectionMode="None"
                         IsItemClickEnabled="True"
                         ItemClick="EvaluationsList_ItemClick"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         AutomationProperties.Name="Evaluations list"
                         AutomationProperties.LiveSetting="Polite">
                    
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <evalcontrols:EvaluationListRow 
                                ViewModel="{Binding}"
                                ItemClicked="EvaluationRow_ItemClicked"
                                ItemDoubleClicked="EvaluationRow_ItemDoubleClicked"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            
            <!-- Floating Action Bar -->
            <evalcontrols:SelectionActionBar x:Name="SelectionActionBar"
                                              SelectedCount="{x:Bind SelectedCount, Mode=OneWay}"
                                              CompareClicked="ActionBar_CompareClicked"
                                              DeleteClicked="ActionBar_DeleteClicked"
                                              CancelClicked="ActionBar_CancelClicked"
                                              Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Page>