<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AIDevGallery.Pages.EvaluatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AIDevGallery.Controls"
    xmlns:local="using:AIDevGallery.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" MaxWidth="1600" Padding="16,16,16,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,12">
            <TextBlock
                Style="{StaticResource SubtitleTextBlockStyle}"
                Text="Assess and compare AI application performance" />
            <TextBlock
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Margin="0,4,0,0"
                Text="Evaluate the performance of your models for a specific task." />
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button x:Name="NewEvaluationButton" Content="New evaluation" Style="{StaticResource AccentButtonStyle}" Click="NewEvaluationButton_Click" />
            <Button x:Name="RefreshButton" Content="Refresh" Style="{StaticResource SubtleButtonStyle}" Click="RefreshButton_Click" />
            <Button x:Name="CopyButton" Content="Copy" Style="{StaticResource SubtleButtonStyle}" IsEnabled="False" Click="CopyButton_Click" />
            <Button x:Name="DeleteButton" Content="Delete" Style="{StaticResource SubtleButtonStyle}" IsEnabled="False" Click="DeleteButton_Click" />
        </StackPanel>

        <!-- Search Functionality -->
        <TextBox
            x:Name="SearchBox"
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,0,0,12"
            PlaceholderText="Search evaluations..."
            HorizontalAlignment="Left"
            Width="320"
            TextChanged="SearchBox_TextChanged" />

        <!-- Data Table -->
        <Border
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="0"
            Margin="0,0,0,12">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!-- Table Header -->
                    <Grid Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" Padding="12,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1.2*" />
                            <ColumnDefinition Width="1.2*" />
                            <ColumnDefinition Width="1.2*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Evaluation name" FontWeight="SemiBold" />
                        <TextBlock Text="Status" Grid.Column="1" FontWeight="SemiBold" />
                        <TextBlock Text="Progress" Grid.Column="2" FontWeight="SemiBold" />
                        <TextBlock Text="Dataset" Grid.Column="3" FontWeight="SemiBold" />
                        <TextBlock Text="Rows" Grid.Column="4" FontWeight="SemiBold" />
                        <TextBlock Text="Criteria" Grid.Column="5" FontWeight="SemiBold" />
                    </Grid>
                    <!-- Evaluations List -->
                    <ListView
                        x:Name="EvaluationsTable"
                        ItemsSource="{Binding FilteredEvaluations}"
                        SelectedItem="{Binding SelectedEvaluation, Mode=TwoWay}"
                        SelectionMode="Single"
                        Margin="0,0,0,12"
                        IsItemClickEnabled="False">
                        <ListView.Header>
                            <Grid Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" Padding="12,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1.2*" />
                                    <ColumnDefinition Width="1.2*" />
                                    <ColumnDefinition Width="1.2*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Evaluation name" FontWeight="SemiBold" />
                                <TextBlock Text="Status" Grid.Column="1" FontWeight="SemiBold" />
                                <TextBlock Text="Progress" Grid.Column="2" FontWeight="SemiBold" />
                                <TextBlock Text="Dataset" Grid.Column="3" FontWeight="SemiBold" />
                                <TextBlock Text="Rows" Grid.Column="4" FontWeight="SemiBold" />
                                <TextBlock Text="Criteria" Grid.Column="5" FontWeight="SemiBold" />
                            </Grid>
                        </ListView.Header>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="12,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="1.2*" />
                                        <ColumnDefinition Width="1.2*" />
                                        <ColumnDefinition Width="1.2*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Name}" />
                                    <Border Grid.Column="1" Background="#2ECC40" CornerRadius="6" Padding="4,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Status}" Foreground="White" FontWeight="SemiBold" />
                                    </Border>
                                    <TextBlock Grid.Column="2" Text="{Binding Progress}" />
                                    <TextBlock Grid.Column="3" Text="{Binding Dataset}" />
                                    <TextBlock Grid.Column="4" Text="{Binding Rows}" />
                                    <TextBlock Grid.Column="5" Text="{Binding Criteria}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Pagination Controls -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button x:Name="PrevPageButton" Content="Prev" IsEnabled="False" Style="{StaticResource SubtleButtonStyle}" Click="PrevPageButton_Click" />
            <Button x:Name="NextPageButton" Content="Next" IsEnabled="False" Style="{StaticResource SubtleButtonStyle}" Click="NextPageButton_Click" />
            <ComboBox x:Name="ItemsPerPageComboBox" Width="100" SelectedIndex="0" SelectionChanged="ItemsPerPageComboBox_SelectionChanged">
                <ComboBoxItem Content="10/Page" />
                <ComboBoxItem Content="20/Page" />
                <ComboBoxItem Content="50/Page" />
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>