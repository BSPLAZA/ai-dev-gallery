<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AIDevGallery.Pages.EvaluatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AIDevGallery.Controls"
    xmlns:evalcontrols="using:AIDevGallery.Controls.Evaluate"
    xmlns:converters="using:AIDevGallery.Converters"
    xmlns:local="using:AIDevGallery.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid x:Name="RootGrid" MaxWidth="1200" Padding="24,16,24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock
                    Text="AI Evaluations"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Margin="0,0,0,4" />
                <TextBlock
                    Style="{StaticResource BodyTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Test, compare, and analyze AI model performance to make data-driven decisions" />
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       VerticalAlignment="Bottom"
                       Spacing="8">
                <Button x:Name="NewEvaluationButton" 
                       Content="New Evaluation" 
                       Style="{StaticResource AccentButtonStyle}" 
                       Click="NewEvaluationButton_Click">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="N"/>
                    </Button.KeyboardAccelerators>
                </Button>
                <Button x:Name="RefreshButton" 
                       Click="RefreshButton_Click"
                       ToolTipService.ToolTip="Refresh list">
                    <FontIcon Glyph="&#xE117;" FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Search and Filter Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBox"
                    Grid.Column="0"
                    PlaceholderText="Search evaluations..."
                    Width="320"
                    VerticalAlignment="Center"
                    TextChanged="SearchBox_TextChanged">
                <TextBox.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="F"/>
                </TextBox.KeyboardAccelerators>
            </TextBox>

            <!-- Multi-select toolbar (hidden by default) -->
            <Border x:Name="SelectionToolbar"
                   Grid.Column="2"
                   Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                   BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                   BorderThickness="1"
                   CornerRadius="4"
                   Padding="12,8"
                   Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="{x:Bind GetSelectionText(EvaluationsList.SelectedItems.Count), Mode=OneWay}"
                              VerticalAlignment="Center"/>
                    <Button Content="Compare" 
                           Style="{StaticResource AccentButtonStyle}"
                           IsEnabled="{x:Bind CanCompare(EvaluationsList.SelectedItems.Count), Mode=OneWay}"
                           Click="CompareButton_Click"/>
                    <Button Content="Export" 
                           Click="ExportButton_Click"/>
                    <Button Content="Delete" 
                           Click="DeleteSelectedButton_Click"/>
                    <Button Content="Cancel"
                           Style="{StaticResource SubtleButtonStyle}"
                           Click="CancelSelectionButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <!-- Loading State -->
            <ProgressRing x:Name="LoadingRing"
                         IsActive="False"
                         Width="60"
                         Height="60"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Visibility="Collapsed"/>

            <!-- Empty State -->
            <evalcontrols:EvaluationEmptyState x:Name="EmptyState"
                                              Visibility="Collapsed"
                                              ImportResultsClicked="EmptyState_ImportResultsClicked"
                                              TestModelClicked="EmptyState_TestModelClicked"
                                              LearnMoreClicked="EmptyState_LearnMoreClicked"/>

            <!-- Evaluations List -->
            <ListView x:Name="EvaluationsList"
                     ItemsSource="{x:Bind FilteredEvaluations}"
                     SelectionMode="None"
                     IsItemClickEnabled="True"
                     ItemClick="EvaluationsList_ItemClick"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <evalcontrols:EvaluationCard 
                            ViewModel="{Binding}"
                            Margin="0,0,0,0"
                            ViewClicked="EvaluationCard_ViewClicked"
                            DeleteClicked="EvaluationCard_DeleteClicked"
                            CardClicked="EvaluationCard_CardClicked"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>