<Page
    x:Class="AIDevGallery.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:AIDevGallery.Controls"
    xmlns:converters="using:AIDevGallery.Converters"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactions="using:Microsoft.Xaml.Interactions.Core"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:AIDevGallery.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AIDevGallery.Models"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:utils="using:AIDevGallery.Utils"
    xmlns:wuc="using:WinUICommunity"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer x:Name="scrollView">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <controls:HeaderCarousel Height="436" />
                <StackPanel
                    Grid.Row="1"
                    Margin="0,0,0,76"
                    Orientation="Vertical">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontWeight="SemiBold"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Get started with these samples" />
                    <controls:SamplesCarousel Margin="0,32,0,48" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <InfoBar
            Title="Send optional diagnostic data"
            Margin="16"
            VerticalAlignment="Bottom"
            IsClosable="False"
            IsOpen="True"
            Message="As a part of using this app, your app sends Microsoft a limited set of data that is necessary to keep this app secure, up to date, and working as expected. Help us improve your experience and fix problems more quickly by sending us additional diagnostic data.">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Yes" />
                <Button Content="No" />
            </StackPanel>
        </InfoBar>

    </Grid>
</Page>
